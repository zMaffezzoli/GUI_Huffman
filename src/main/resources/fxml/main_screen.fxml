<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.huffman.controller.MainController">
    <content>
        <VBox spacing="15" style="-fx-background-color: #f4f4f4;">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="Huffman Compressor Pro" textFill="#2c3e50">
                <font><Font name="System Bold" size="24.0"/></font>
            </Label>

            <TabPane fx:id="inputTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white; -fx-border-color: #ddd;">
                <Tab fx:id="tabText" text="Digitar Texto">
                    <VBox spacing="10" style="-fx-padding: 15;">
                        <TextArea fx:id="inputArea" promptText="Digite o texto aqui..." prefHeight="100" wrapText="true"/>
                    </VBox>
                </Tab>
                <Tab fx:id="tabFile" text="Carregar Arquivo">
                    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 30;">
                        <Button text="Selecionar Arquivo .txt" onAction="#handleSelectFile" style="-fx-font-size: 14px;"/>
                        <Label fx:id="fileLabel" text="Nenhum arquivo selecionado" textFill="#7f8c8d">
                            <font><Font name="System Italic" size="13.0"/></font>
                        </Label>
                    </HBox>
                </Tab>
            </TabPane>

            <Button text="COMPRIMIR E GERAR ÁRVORE" onAction="#handleProcess" maxWidth="Infinity"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10; cursor: hand;"/>

            <HBox spacing="15" prefHeight="300">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Frequências" style="-fx-font-weight: bold;"/>
                    <TableView fx:id="freqTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colSymbolFreq" text="Símbolo" prefWidth="75"/>
                            <TableColumn fx:id="colFreq" text="Qtd" prefWidth="75"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Códigos Gerados" style="-fx-font-weight: bold;"/>
                    <TableView fx:id="codeTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colSymbolCode" text="Símbolo" prefWidth="75"/>
                            <TableColumn fx:id="colCode" text="Binário" prefWidth="100"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Resultado Final" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="binaryOutput" editable="false" wrapText="true" VBox.vgrow="ALWAYS" style="-fx-font-family: 'Monospaced';"/>
                </VBox>
            </HBox>

            <Label text="Visualização da Árvore" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: white; -fx-border-color: #ccc;" prefHeight="500">
                <content>
                    <Pane fx:id="treePane" minHeight="800" minWidth="1500" style="-fx-background-color: white;"/>
                </content>
            </ScrollPane>

        </VBox>
    </content>
</ScrollPane>